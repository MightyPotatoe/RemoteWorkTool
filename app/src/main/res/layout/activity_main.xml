<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:theme="@style/AppTheme">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/ma_card1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="4dp"
            android:background="@color/white"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:cardMaxElevation="8dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="false"
            app:contentPadding="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/ma_card1_headline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:text="@string/praca"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    tools:ignore="SpUsage" />

                <TextView
                    android:id="@+id/ma_card1_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ma_card1_headline"
                    android:layout_marginStart="4dp"
                    android:text="@string/dzienDzisiejszy"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14dp"
                    tools:ignore="SpUsage" />

                <View
                    android:id="@+id/ma_card1_separator"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_below="@+id/ma_card1_subtitle"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:background="@color/colorPrimary" />

                <ProgressBar
                    android:id="@+id/ma_card1_progressBarInactive"
                    style="?android:progressBarStyleHorizontal"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignTop="@+id/ma_card1_subtitle2"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="48dp"
                    android:progress="100"
                    android:progressDrawable="@drawable/circle_small"
                    android:progressTint="#367C909C"
                    android:visibility="visible" />

                <ProgressBar
                    android:id="@+id/ma_card1_progressBar"
                    style="?android:progressBarStyleHorizontal"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignTop="@+id/ma_card1_subtitle2"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="48dp"
                    android:progress="60"
                    android:progressDrawable="@drawable/circle_small"
                    android:progressTint="@color/my_app_primary_variant_color"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/card1_progress_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/ma_card1_progressBar"
                    android:layout_alignTop="@+id/ma_card1_progressBar"
                    android:layout_alignEnd="@+id/ma_card1_progressBar"
                    android:layout_alignBottom="@+id/ma_card1_progressBar"
                    android:gravity="center"
                    android:text="@string/placeholderPercentage"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16dp"
                    tools:ignore="SpUsage" />

                <TextView
                    android:id="@+id/ma_card1_subtitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ma_card1_separator"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/przepracawoano"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16dp"
                    tools:ignore="SpUsage" />

                <TextView
                    android:id="@+id/ma_card1_body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ma_card1_subtitle2"
                    android:layout_alignStart="@+id/ma_card1_subtitle2"
                    android:layout_marginStart="40dp"
                    android:text="@string/placeholderTime"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    android:textColor="@color/design_default_color_primary"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    tools:ignore="SpUsage" />

                <TextView
                    android:id="@+id/ma_card1_subtitle3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ma_card1_body1"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:text="@string/pozostalo"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16dp"
                    tools:ignore="SpUsage" />

                <TextView
                    android:id="@+id/ma_card1_body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ma_card1_subtitle3"
                    android:layout_alignStart="@+id/ma_card1_body1"
                    android:text="@string/placeholderTime"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    android:textColor="@color/design_default_color_primary"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    tools:ignore="SpUsage" />

                <View
                    android:id="@+id/ma_card1_separator2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_below="@+id/ma_card1_progressBar"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:background="@color/colorPrimary" />

                <TextView
                    android:id="@+id/ma_card1_actionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ma_card1_separator2"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp"
                    android:text="@string/przejdzDoSesji"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                    android:textColor="@color/design_default_color_primary"
                    android:textSize="14dp"
                    tools:ignore="SpUsage" />

            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="4dp">

            <View
                android:id="@+id/ma_card2_view_separator"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@color/colorPrimary" />


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card2"
                android:layout_toStartOf="@+id/ma_card2_view_separator"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:background="@color/white"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:cardMaxElevation="8dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="false"
                app:contentPadding="10dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/ma_card2_header1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="4dp"
                        android:text="@string/nadgodziny"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        tools:ignore="SpUsage" />

                    <View
                        android:id="@+id/ma_card2_separator"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:layout_below="@+id/ma_card2_header1"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:background="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/ma_card2_body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ma_card2_header1"
                        android:layout_marginTop="4dp"
                        android:layout_centerHorizontal="true"
                        android:text="@string/placeholderTime"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                        android:textColor="@color/green"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        tools:ignore="SpUsage" />

                    <View
                        android:id="@+id/ma_card2_separator2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:layout_below="@+id/ma_card2_body1"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:background="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/ma_card2_actionButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ma_card2_separator2"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="8dp"
                        android:text="@string/szczegoly"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                        android:textColor="@color/my_app_primary_variant_color"
                        android:textSize="14sp"
                        />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/ma_card2_view_separator"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="2dp"
                android:background="@color/white"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:cardMaxElevation="8dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="false"
                app:contentPadding="10dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/ma_card3_header1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_marginTop="4dp"
                        android:text="@string/wyplata"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        tools:ignore="SpUsage" />

                    <View
                        android:id="@+id/ma_card3_separator"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:layout_below="@+id/ma_card3_header1"
                        android:layout_marginTop="2dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:background="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/ma_card3_body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ma_card3_header1"
                        android:layout_marginTop="4dp"
                        android:layout_centerHorizontal="true"
                        android:text="@string/placeholderMoney"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                        android:textColor="@color/green"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        tools:ignore="SpUsage" />

                    <View
                        android:id="@+id/ma_card3_separator2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:layout_below="@+id/ma_card3_body1"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:background="@color/colorPrimary" />

                    <TextView
                        android:id="@+id/ma_card3_actionButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ma_card3_separator2"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="8dp"
                        android:text="@string/szczegoly"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                        android:textColor="@color/my_app_primary_variant_color"
                        android:textSize="14sp"
                        />
                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:background="@color/white"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:cardMaxElevation="8dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="false"
            app:contentPadding="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/ma_card4_vertical_separator"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_alignTop="@+id/ma_card4_separator"
                    android:layout_alignBottom="@+id/ma_card4_separator2"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_centerHorizontal="true"
                    android:background="#c0c0c0" />

                <TextView
                    android:id="@+id/card4_headline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/raport"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    tools:ignore="SpUsage" />

                <TextView
                    android:id="@+id/card4_subtitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/card4_headline"
                    android:layout_marginStart="8dp"
                    android:text="@string/zeszlyMiesiac"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14dp"
                    tools:ignore="SpUsage" />

                <View
                    android:id="@+id/ma_card4_separator"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_below="@+id/card4_subtitle1"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:background="@color/colorPrimary" />

                <TextView
                    android:id="@+id/card4_subtitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/card4_headline"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="8dp"
                    android:text="@string/obecnyMiesiac"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14dp"
                    tools:ignore="SpUsage" />

                <TextView
                    android:id="@+id/card4_subtitle3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ma_card4_separator"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/przepracawoano"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14dp"
                    tools:ignore="SpUsage" />

                <TextView
                    android:id="@+id/card4_subtitle4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ma_card4_separator"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="@string/przepracawoano"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14dp"
                    tools:ignore="SpUsage" />

                <TextView
                    android:id="@+id/card4_body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card4_subtitle3"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="2dp"
                    android:text="@string/placeholderNumber3d"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    android:textColor="@color/design_default_color_primary"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    />

                <TextView
                    android:id="@+id/card4_body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/card4_body1"
                    android:layout_marginEnd="32dp"
                    android:layout_toEndOf="@id/card4_body1"
                    android:text="@string/placeholderNumberHours"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/card4_body3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card4_subtitle3"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="2dp"
                    android:layout_toStartOf="@id/card4_body4"
                    android:text="@string/placeholderNumber2d"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    android:textColor="@color/design_default_color_primary"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    tools:ignore="SpUsage" />

                <TextView
                    android:id="@+id/card4_body4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/card4_body1"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="16dp"
                    android:text="@string/placeholderNumberHours"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    tools:ignore="SpUsage" />

                <TextView
                    android:id="@+id/card4_subtitle5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/card4_body4"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:text="@string/zarobionePieniadze"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14dp"
                    tools:ignore="SpUsage" />

                <TextView
                    android:id="@+id/card4_subtitle6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/card4_body4"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp"
                    android:text="@string/zarobionePieniadze"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14dp"
                    tools:ignore="SpUsage" />

                <TextView
                    android:id="@+id/card4_body5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card4_subtitle5"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="2dp"
                    android:text="@string/placeholderMoney"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    android:textColor="@color/design_default_color_primary"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    tools:ignore="SpUsage" />

                <TextView
                    android:id="@+id/card4_body6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card4_subtitle6"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="16dp"
                    android:text="@string/placeholderMoney"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    android:textColor="@color/design_default_color_primary"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    tools:ignore="SpUsage" />

                <View
                    android:id="@+id/ma_card4_separator2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_below="@+id/card4_body6"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:background="@color/colorPrimary" />

                <TextView
                    android:id="@+id/card4_actionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/ma_card4_separator2"
                    android:layout_marginTop="8dp"
                    android:text="@string/wiecej"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                    android:textColor="@color/my_app_primary_variant_color"
                    android:textSize="14dp"
                    tools:ignore="SpUsage" />
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>

